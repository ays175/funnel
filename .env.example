# --- OpenAI ---
OPENAI_API_KEY="YOUR_KEY_HERE"
OPENAI_MODEL="gpt-4.1-mini"
OPENAI_TIMEOUT_SECONDS=60

# --- App ---
APP_ENV="dev"
APP_HOST="0.0.0.0"
APP_PORT=8000
CORS_ORIGINS="http://localhost:5173"

# --- Storage ---
TRACE_DB_URL="sqlite:///./trace.db"
TRACE_RETENTION_DAYS=30

# --- Feature flags ---
ENABLE_LLM_FACET_PROPOSALS=true
ENABLE_RETRIEVAL=false
MAX_FACET_QUESTIONS=10
MAX_REFINE_ROUNDS=2

# --- Safety/Policy knobs ---
REQUIRE_USER_CONFIRM_BEFORE_FINAL=true
ALLOW_USER_PROMPT_EDIT=true
